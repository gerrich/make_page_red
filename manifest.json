{
  "name": "Page Redder",
  "description": "Make the current page red",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "storage",
    "http://*/",
    "https://*/"
    //"fileSystem"
  ],
  "background": {
    "scripts": ["background.js", "content_script.js", "popup.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Make this page red",
    "default_popup": "popup.html"
  },
  "commands": {
    "auto_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y",
        "chromeos": "Ctrl+Shift+Y",
        "linux": "Ctrl+Shift+Y"
      },
      "description": "autoparse huge blocks"
    },
    "take_selection": {
      "description": "take selection"
    },
    "test_write": {
      "description": "test write"
    },
    "test_crawler": {
      "description": "test crawler"
    }
  },
  "manifest_version": 2
}
